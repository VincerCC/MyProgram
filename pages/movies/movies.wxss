/* pages/movies/movies.wxss */
.movies_container{
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #eee;
}
.movies_image{
  width:128rpx ;
  height:128rpx ;
}
.movies_detail{
  display: flex;
  flex-direction: column;
  width: 70%;
  margin-left: 20rpx;
}
.movies_name{
  font-size: 32rpx;
  color: #000;
  /* 不换行*/
  white-space: nowrap;
  /*隐藏超出部分*/
  overflow: hidden;
  /*超出部分用..*/
  text-overflow: ellipsis; 
}
.movies_year{
  font-size: 20rpx;
  color: #666;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
}
.movies_director{
  font-size: 30rpx;
  color: #333;
}
.movies_rating{
  font-size: 40rpx;
  color: red;
  font-weight: bold;
}