.TmpContainer{
  display: flex;
  flex-direction: column;/*垂直显示*/
  margin-top: 20rpx;
  border-top: 1rpx solid #eee;
  border-bottom: 1rpx solid #eee;
  margin: 10rpx 0;
}
.avatar_date{
  padding: 10rpx;
}
.avatar_date image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;/*middle设置元素的垂直对齐方式为中部对齐。*/
  margin-right: 10rpx;
}
.avatar_date text{
  font-size: 32rpx;
}
.company{
  /* margin-left: 10rpx; */
  font-size: 32rpx;
  font-weight: 700;
  margin: 10rpx;
}
.conterimage{
  width: 100%;
  height: 500rpx;
}
.content{
  font-size: 32rpx;
  text-indent: 32rpx;
}
.collection image{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.collection text{
  font-size: 20rpx;
  margin-right: 10rpx;
}